<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avatar.BaseSelector">

    <ImageView
        android:id="@+id/baseSelectorFinalForm"
        android:layout_width="231dp"
        android:layout_height="295dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189"
        tools:srcCompat="@tools:sample/avatars" />

    <ScrollView
        android:id="@+id/baseSelectorOptionScroll"
        android:layout_width="173dp"
        android:layout_height="218dp"
        app:layout_constraintEnd_toEndOf="@+id/baseSelectorFinalForm"
        app:layout_constraintStart_toStartOf="@+id/baseSelectorFinalForm"
        app:layout_constraintTop_toBottomOf="@+id/baseSelectorFinalForm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/baseSelectorOption1"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:onClick="selectOption"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/baseSelectorOption2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:onClick="selectOption"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/baseSelectorNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:onClick="nextSelector"
        android:src="@drawable/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/baseSelectorOptionScroll"
        app:layout_constraintTop_toBottomOf="@+id/baseSelectorFinalForm"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>