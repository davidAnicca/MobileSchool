<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avatar.ImageMerger"
    tools:visibility="visible">

    <ProgressBar
        android:id="@+id/progressForMerge"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/base"
        android:layout_width="352dp"
        android:layout_height="272dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:srcCompat="@tools:sample/backgrounds/scenic[3]" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="164dp"
        android:layout_height="226dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/base"
        app:layout_constraintTop_toBottomOf="@+id/base"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eyes1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:onClick="selectOption"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/eyes2"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:onClick="selectOption"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="166dp"
        android:layout_height="227dp"
        app:layout_constraintEnd_toEndOf="@+id/base"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mouth1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:onClick="selectOption"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/mouth2"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:onClick="selectOption"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>