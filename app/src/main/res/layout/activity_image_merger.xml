<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avatar.ImageMerger"
    tools:visibility="visible">

    <ProgressBar
        android:id="@+id/progressForMerge"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/finalForm"
        android:layout_width="368dp"
        android:layout_height="424dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/backgrounds/scenic[3]" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="129dp"
        android:layout_height="171dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.813">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eyes1"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:onClick="selectEyes"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/eyes2"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:onClick="selectEyes"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="128dp"
        android:layout_height="163dp"
        android:layout_marginStart="123dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mouth1"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:onClick="selectMouth"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/mouth2"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:onClick="selectMouth"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>