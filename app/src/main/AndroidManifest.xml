<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kikoteam.mobileschool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".avatar.AvatarToStorage"></activity>
        <activity android:name=".avatar.SaveAvatar" />
        <activity android:name=".avatar.HairSelector" />
        <activity android:name=".avatar.MouthSelector" />
        <activity android:name=".avatar.EyesSelector" />
        <activity android:name=".avatar.BaseSelector" />
        <activity android:name=".avatar.ImageMerger" />
        <activity android:name=".RegisterLogIn.ResetPasswordActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterLogIn.RegisterActivity" />
        <activity android:name=".RegisterLogIn.LoginActivity" />
        <activity android:name=".RegisterLogIn.AgreeActivity" />
    </application>

</manifest>